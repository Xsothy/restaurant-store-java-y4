{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": "./app/src"
  },
  "include": ["app/src/**/*.ts", "app/src/**/*.d.ts"],
  "exclude": ["node_modules", "app/dist"]
}
